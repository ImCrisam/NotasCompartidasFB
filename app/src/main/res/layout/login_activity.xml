<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/img01"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ds"
        android:src="@drawable/ic_icon_notas_compartidas02" />

    <RelativeLayout

        android:id="@+id/rl01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/img01"
        android:layout_marginHorizontal="@dimen/dxxl"
        android:layout_marginTop="@dimen/dxxl"
        android:layout_marginBottom="@dimen/dxxl"

        >

        <TextView
            android:id="@+id/tv01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_tv02"
            android:textColor="@color/colorAccentB"
            android:textSize="@dimen/tl"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv01"
            android:layout_marginTop="@dimen/ds"
            android:background="@drawable/fondo_editext"
            android:gravity="center"
            android:inputType="phone"
            android:outlineAmbientShadowColor="@color/colorAccentB"

            android:paddingHorizontal="@dimen/dxl"
            android:paddingVertical="@dimen/ds"
            android:textColor="@color/colorAccentB"
            android:textCursorDrawable="@color/colorAccentB"
            android:textSize="@dimen/txxl"

            />

        <Button

            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fondo_btn_outline"
            android:text="@string/btnOk"
            android:textColor="@color/colorAccentB"
            android:paddingVertical="@dimen/ds"
            android:textSize="@dimen/tl" />


    </RelativeLayout>


</RelativeLayout>